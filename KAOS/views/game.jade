extends layout

block scripts
	script(src='/js/game.js')
	script(src='/js/tools.js')

block content
	#game-container.row
		include parts/homeBar
		include parts/accountModal
		include parts/confirmModal
		include parts/confirmModalAdmin
		include parts/williamsStandard
		include parts/modMessageEditor
		include parts/hostingGuide

		#titleBar
			#titleNav(style="visibility: hidden;")
				a(href="/home")
					i.fa.fa-angle-left.fa-5x
			#title
				h1= title
				h2#subTitle 
		hr

		#gameStatus(style="display: none;")
			p This game has not started yet

		#spectatorSection(style="display: none;")
			#infoMode.mode
				button#btn-joingame.btn.btn-primary
							| Join Game

				button#btn-gamefull.btn.btn-primary(style="display: none;")
							| This game has already started.
				
				.infoBox
					h2 Message From The Moderator:
					.modMessage
						p 
				//- Generated by JS (Function generateInfo)		
				.info.infoBox 
					h2 Game Information:
					p Player Count :
					a Ruleset : Williams Standard

		#gameSection(style="display: none;")
			div.text-center
				ul#innerNav.nav.nav-pills
					li.d3
						a#0
							i.fa.fa-crosshairs.fa-3x
							span Game Terminal
					li.d3
						a#1
							i.fa.fa-info-circle.fa-3x
							span Information	
					li.d3
						a#2
							i.fa.fa-cogs.fa-3x
							span Profile Settings

			#gameMode.mode(style="display: none;")
				#unconfirmed.infoBox
					h2 You have not been confirmed. Please see the information tab for confirmation directions.
				#screen.row
					#targetScreen.col-md-9.infoBox
						#living
							h2 Target Information
								#targetInfo
							hr
							h2#timeMessage Time until placed on Death List:
							h2#timeLeft ...
						#leavegame(style="display: none;")
							hr
							button#btn-leavegame.btn.btn-primary
										| Leave Game
						#elimSection
							hr
							button#btn-kill.btn.btn-primary
								| Target Eliminated

							#confirmKill(style="display: none;")
								hr								
								p Were you killed?
								p#pendDeathTimer Time until auto-confirm: 
								#buttonDiv
									button#btn-killConfirm.btn.btn-primary Yes, I was.
									button#btn-killDisagree.btn.btn-primary No!

							#confirmDeath(style="display: none;")
								hr	
								p A kill claim is on your target. Waiting for confirmation.
								p#pendKillTimer Time until auto-confirm:

							#deathDenied(style="display: none;")
								hr
								p Your last kill was claimed to be illegitimate. Please contact the moderator to resolve this.
								button#btn-conflictResolve.btn.btn-primary Ok...
					#scoreBox.col-md-3
						#score.infoBox
							h2 Score
							p#killCount Kills: 0 
						.infoBox
							h2 Leaderboard
							#leaders
			#infoMode.mode(style="display: none;")
				.infoBox
					h2 Message From The Moderator:
					.modMessage
						p 
				//- Generated by JS (Function generateInfo)
				.info.infoBox 

					h2 Game Information:


			#settingsMode.mode(style="display: none;")
				form#form1.profileForm.form-horizontal
					h2 Update Profile
					#sec.form-group
						label(for="name-tf").col-md-2.control-label Full Name:
						.col-md-10
							input(type='text', name='name', id='name-tf', placeholder='Eg: John H. Smith').form-control

					#sec.form-group
						label(for="url-tf").col-md-2.control-label Dorm Room:
						.col-md-10
							input(type='text', name='location', id='room-tf', placeholder='Eg: Dormname 111').form-control
					#sec.form-group
						label(for="email-tf").col-md-2.control-label Email Address:
						.col-md-10
							input(type='text', name='email', id='email-tf', placeholder='Eg: johnsmith@email.com').form-control
					//- #sec.form-group
					//- 	label(for="url-tf").col-md-2.control-label Williams Unix:
					//- 	.col-md-10
					//- 		input(type='text', name='unix', id='unix-tf', placeholder='Eg: jhs1 (Ignore this if not a Williams student)').form-control
					#sec.form-group
						label(for="url-tf").col-md-2.control-label Profile Photo:
						.col-md-10
							input(type='file', name='image', id='img-tf').form-control

					button(type="submit").btn.btn-primary
						|Change Profile

					button#showProfile(name="self", type="button").btn.btn-primary
						|Show Current Profile

					.loading.i.fa.fa-spinner.fa-spin.fa-2x(style="display: none;")

		#ownerSection(style="display: none;")

			div.text-center
				ul#innerNav.nav.nav-pills
					li.d5
						a#0
							i.fa.fa-users.fa-3x
							span Players
					li.d5
						a#1
							i.fa.fa-crosshairs.fa-3x
							span Target List
					li.d5
						a#2
							i.fa.fa-gavel.fa-3x
							span Death Squad
					li.d5
						a#3
							i.fa.fa-info-circle.fa-3x
							span Information	
					li.d5
						a#4
							i.fa.fa-cogs.fa-3x
							span Game Settings

			#playerMode.mode(style="display: none;")
				h2 Players in this game:
				#playerList.list-group
					p
					i.fa.fa-refresh.fa-spin.fa-3x

				h2 Your Death Squad:
				#squadList.list-group
					p
					i.fa.fa-refresh.fa-spin.fa-3x

				#confirmSection
					h2 Unconfirmed Players:
					#confirmList.list-group
						p
						i.fa.fa-refresh.fa-spin.fa-3x

				h2 Leaderboard:
				.infoBox#leaderboard
					#adminleaders


			#targetMode.mode(style="display: none;")
				h2 Current Circle: (Each hunts the player below it.)
				#circle.list-group
					i.fa.fa-refresh.fa-spin.fa-3x

			#deathMode.mode(style="display: none;")
				h2 Death List
				#deathList.list-group
					i.fa.fa-refresh.fa-spin.fa-3x

			#infoMode.mode(style="display: none;")
				.infoBox
					h2 Message From The Moderator:
					.modMessage
						p 
					button#editModMesg.btn.btn-primary
						|Edit
				//- Generated by JS (Function generateInfo)
				.info.infoBox
					h2 Game Information:
					p Player Count: 
					a Ruleset : Williams Standard
					button.btn.btn-primary
						|Edit

				.infoBox
					h2 Email List:
					#emailList


			#settingsMode.mode(style="display: none;")
				h2 Some game commands:
				#settingButtons.row

					button#btn-startgame.btn.btn-primary.col-md-12.col-xs-12
								| Start Game

					button#btn-endgame.btn.btn-primary.col-md-12.col-xs-12
								| End Game

					button#btn-deletegame.btn.btn-primary.col-md-12.col-xs-12
								| Delete Game

		#squadSection(style="display: none;")

			div.text-center
				ul#innerNav.nav.nav-pills
					li.d3
						a#0
							i.fa.fa-gavel.fa-3x
							span Death Squad
					li.d3
						a#1
							i.fa.fa-info-circle.fa-3x
							span Information
					li.d3
						a#2
							i.fa.fa-cogs.fa-3x
							span Settings

			#deathMode.mode(style="display: none;")
				h2 Death List
				#deathList.list-group
					i.fa.fa-refresh.fa-spin.fa-3x

			#infoMode.mode(style="display: none;")
				.infoBox
					h2 Message From The Moderator:
					.modMessage
						p hiii guys
				//- Generated by JS (Function generateInfo)
				.info.infoBox
					h2 Game Information:
					p Player Count :
					a Ruleset : Williams Standard

			#settingsMode.mode(style="display: none;")
				form#form2.profileForm.form-horizontal
					h2 Update Profile
					#sec.form-group
						label(for="name-tf").col-md-2.control-label Full Name:
						.col-md-10
							input(type='text', name='name', id='name-tf', placeholder='Eg: John H. Smith').form-control
					#sec.form-group
						label(for="url-tf").col-md-2.control-label Dorm Room:
						.col-md-10
							input(type='text', name='location', id='room-tf', placeholder='Eg: Dormname 111').form-control
					#sec.form-group
						label(for="email-tf").col-md-2.control-label Email Address:
						.col-md-10
							input(type='text', name='email', id='email-tf', placeholder='Eg: johnsmith@email.com').form-control
					//- #sec.form-group
					//- 	label(for="url-tf").col-md-2.control-label Williams Unix:
					//- 	.col-md-10
					//- 		input(type='text', name='unix', id='unix-tf', placeholder='Eg: jhs1 (Ignore this if not a Williams student)').form-control
					#sec.form-group
						label(for="url-tf").col-md-2.control-label Profile Photo:
						.col-md-10
							input(type='file', name='image', id='img-tf').form-control

					button(type="submit").btn.btn-primary
						|Change Profile

					button#showProfile(name="self", type="button").btn.btn-primary
						|Show Current Profile

					.loading.i.fa.fa-spinner.fa-spin.fa-2x(style="display: none;")
				#settingButtons.row
					//- button#btn-leavegame.btn.btn-primary.col-md-12.col-xs-12
					//- 			| Leave Game
		


		#alertBox
			include parts/alert